{erl_opts, [debug_info,
           warnings_as_errors,
           warn_untyped_record,
           {parse_transform, lager_transform}]}.
{eunit_opts, [verbose]}.
{edoc_opts, [preprocess,
             {dir, "edoc"}]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.
{deps, [{lager, "2.0.3", {git, "git://github.com/basho/lager.git", {tag, "2.0.3"}}},
        {eleveldb, ".*", {git, "git://github.com/plumlife/eleveldb.git", {branch, "rebar3"}}}]}.

{post_hooks, [{compile, "mkdir -p $(pwd)/priv && /root/x-tools/arm-plum-linux-gnueabi/bin/arm-plum-linux-gnueabi-gcc $(pwd)/c_src/riak_ensemble_clock.c -shared -I/opt/arm/lib/erlang/erts-6.4/include -L/opt/arm/lib/erlang/lib/erl_interface-3.7.20/lib -lerl_interface -lei -o $(pwd)/priv/riak_ensemble.so"}]}.
